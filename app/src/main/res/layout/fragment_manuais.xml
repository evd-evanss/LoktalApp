<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgapps"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:layout_marginTop="32dp"
            android:id="@+id/my_relative_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/txtDashboard"
                android:text="Manuais"
                android:textColor="#fff"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />



        </RelativeLayout>
        
        <GridLayout
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/id_wavetronic"
                android:layout_margin="12dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:background="@color/colorPrimary"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="150dp"
                android:layout_width="170dp"
                >

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/ic_wavetronic"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                    <TextView

                        android:textColor="#6f6f6f"
                        android:text="Wavetronic"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/id_fraxx"
                android:layout_margin="12dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="150dp"
                android:layout_width="170dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/ic_fraxx"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                    <TextView

                        android:textColor="#6f6f6f"
                        android:text="Megapulse"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/id_wavevac"
                android:layout_margin="12dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="150dp"
                android:layout_width="170dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/ic_wavevac"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:textColor="#6f6f6f"
                        android:text="Wavevac"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </GridLayout>
        
    </LinearLayout>


</ScrollView>